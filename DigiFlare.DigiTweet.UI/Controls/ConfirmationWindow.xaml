<Window x:Class="DigiFlare.DigiTweet.UI.ConfirmationWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        WindowStyle="None"
        AllowsTransparency="True"
        Background="Black"
        BorderBrush="White"
        BorderThickness="1"
        Height="150" Width="300"
        Title="ConfirmationWindow"
        ShowInTaskbar="False">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*" />
            <RowDefinition Height="*" />
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>
        <TextBlock x:Name="txtMessage" 
                   Grid.Row="0" Grid.ColumnSpan="2"
                   Text="Delete category?"
                   FontSize="14"
                   Foreground="White"
                   HorizontalAlignment="Center"
                   VerticalAlignment="Bottom"
                   Margin="10"/>
        <Button Grid.Row="1" Grid.Column="0" Click="OK_Click" Content="OK" Width="75" Height="25" Margin="5" Foreground="White" Style="{DynamicResource GenericButton}" />
        <Button Grid.Row="1" Grid.Column="1" Click="Cancel_Click" Content="Cancel" Width="75" Height="25" Margin="5" Foreground="White" Style="{DynamicResource GenericButton}" />
    </Grid>
</Window>
